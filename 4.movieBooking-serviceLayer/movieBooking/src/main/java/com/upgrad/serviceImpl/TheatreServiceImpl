package com.upgrad.serviceImpl;

import com.upgrad.DAO.CustomerDAO;
import com.upgrad.beans.Customer;
import com.upgrad.exceptions.CustomerNotFoundException;
import com.upgrad.service.CustomerService;
import org.springframework.beans.factory.annotation.Autowired;

import java.util.List;

public class TheatreServiceImpl implements TheatreService {

    @Autowired
    private TheatreDAO theatreDAO  ;

    @Override
    public Theatre createNewTheatre(Theatre theatre) {
        Theatre theatre1 = theatreDAO.save(theatre);
        return theatre1;
    }

    @Override
    public Theatre getTheatre(int theatreId) throws TheatreNotFoundException {
        Theatre theatre = theatreDAO.findById(theatreId).orElseThrow(
                ()->  new TheatreNotFoundException("Theatre not found for " + theatreId));
        return customer;
    }

    @Override
    public boolean deleteTheatre(int theatreId) throws TheatreNotFoundException {
        Theatre theatre = getTheatre(theatreId);
        theatreDAO.delete(theatre);
        return true;
    }

    @Override
    public List<Theatre> getAllTheatres() {
        return theatreDAO.findAll();
    }
}
